<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net5.0</TargetFrameworks>
    <ContentTargetFolders>content</ContentTargetFolders>
    <Product>Our.Umbraco.SearchSpellCheck</Product>
    <PackageId>Our.Umbraco.SearchSpellCheck</PackageId>
    <PackageVersion>1.0.0-beta.2</PackageVersion>
    <Title>Our.Umbraco.SearchSpellCheck</Title>
    <Description>A Lucene.Net-based spell checker for Umbraco v8.</Description>
    <PackageTags>umbraco, search, spell, check, examine, luncene, Rick, Butterfield</PackageTags>
    <RepositoryUrl>https://github.com/rickbutterfield/Our.Umbraco.SearchSpellCheck</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageProjectUrl>https://github.com/rickbutterfield/Our.Umbraco.SearchSpellCheck</PackageProjectUrl>
    <Authors>Rick Butterfield</Authors>
    <Copyright>2021 Rick Butterfield</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <PackageReference Include="UmbracoCms.Core" version="8.15.0" />
    <PackageReference Include="UmbracoCms.Web" version="8.15.0" />
    <PackageReference Include="Skybrud.Umbraco.GridData" version="3.0.1" />
    <PackageReference Include="Examine" version="1.2.0" />
    <PackageReference Include="Lucene.Net" version="3.0.3" />    
    <PackageReference Include="Lucene.Net.Contrib" version="3.0.3" />    
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Examine" version="2.0.1" />
    <PackageReference Include="Umbraco.Cms.Core" version="9.0.0" />
    <PackageReference Include="Umbraco.Cms.Infrastructure" version="9.0.0" />
    <PackageReference Include="Umbraco.Cms.Examine.Lucene" version="9.0.0" />
    <PackageReference Include="Skybrud.Umbraco.GridData" version="4.0.0-alpha001" />
    <PackageReference Include="Lucene.Net" version="4.8.0-beta00015" />
    <PackageReference Include="Lucene.Net.Suggest" version="4.8.0-beta00015" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="BackgroundTasks\RebuildOnStartupTask.cs" />
    <Content Include="Constants.cs" />
    <Content Include="Indexing\BackgroundIndexRebuilder.cs" />
    <Content Include="Indexing\SpellCheckIndexCreator.cs" />
    <Content Include="Indexing\SpellCheckIndexPopulator.cs" />
    <Content Include="Indexing\SpellCheckValueSetBuilder.cs" />
    <Content Include="Composing\IndexComponent.cs" />
    <Content Include="Composing\IndexComposer.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="app.config" />
    <None Include="packages.config" />
    <Content Include="Suggestions.cs" />
    <Content Include="Models\Suggestion.cs" />
  </ItemGroup>
</Project>